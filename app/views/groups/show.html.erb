
<div>
  <div>
    <h1>
      Group <%= @the_group.title %> details
    </h1>

    <div>

      <div>
        <a href="/delete_group/<%= @the_group.id %>">
          Delete group
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Group Name
      </dt>
      <dd>
        <%= @the_group.title %>
      </dd>

     

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_group.created_at) %> ago
      </dd>

     
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit Group Name
    </h2>

    <form action="/modify_group/<%= @the_group.id %>"  method="post" >
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title" value="<%= @the_group.title %>">
      </div>

      <div>
       

        <input type="hidden" id="group_creator_id_box" name="query_group_creator_id" value="<%= @the_group.group_creator_id %>">
      </div>

      <button>
        Update 
      </button>
    </form>
  </div>
</div>
<hr>

<table>
      <tr>
        <th>
         Date
        </th>
          <th>
         Time
        </th>
 <th>
         Description
        </th>
        <th>
         Host
        </th>
        <th>
         Location
        </th>

<h2><%= @the_group.title %> Events </h2>

<% @the_group.events.each do |party| %>

      <tr>
        <td>
          <%= party.date.strftime("%b %d") %>
        </td>

        <td>
          <%= party.start_time.strftime("%l:%m %p") %>
        </td>

        <td>
          <%= party.description %>
        </td>

        <td>
        <%= party.host.first_name %>
      </td>

      <td>
      <%= party.location %>
    </td>

  
  <%end%>
</table>
  <hr>


<h2>Members</h2>
<% @the_group.users.each do |member_names| %>
<td>
      <%= member_names.first_name %>
    </td>

    <%end%>